@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<div class="row clearfix">
    <div class="col-12">
        <section class="card card-fluid">
            <div class="card-body">
                <div class="table-responsive-md">
                    <table id="quanlytin" class="table table-striped table-bordered table-hover" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>Mã hàng hóa</th>
                                <th>Tên hàng hóa</th>
                                <th>Số lượng</th>
                                <th>Mã vạch</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>
        </section>
    </div>
</div>

<div class="modal fade modal-mavach" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title mt-0" id="myLargeModalLabel">Mã vạch</h5>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            </div>
            <div class="modal-body text-center">
                <form id="form" autocomplete="on">
                    <input type="hidden" name="MAHH" />
                    <div class="form-floating mt-2">
                        <input type="text" class="form-control" autocomplete="off" name="mavach" placeholder="Mã vạch" />
                    </div>
                </form>
            </div>
            <div class="modal-footer text-center">
                <button class="btn btn-success btn-sm save">Lưu lại</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div>
@section Scripts{
<script type='text/javascript'>
    $(document).ready(function() {
        let table = $('#quanlytin').DataTable({
            "stateSave": true,
            "processing": true,
            "serverSide": true,
            // "ordering": false,
            "ajax": {
                "url": "/admin/product/table",
                "dataType": "json",
                "type": "POST",
                'data': function(data) {
                }
            },
            "columns": [{
                    "data": "id",
                }, {
                    "data": "name",
                    "width": "500px",
                    "orderable": false
                },
                {
                    "data": "soluong",
                    "orderable": false
                },
                {
                    "data": "mavach",
                    "orderable": false
                }
            ],
        });
        $(document).on("click",".editmavach",function(){
            var mahh = $(this).data("mahh");
            var mavach = $(this).data("mavach");
            fillForm($("#form"),{MAHH:mahh,mavach:mavach});

        })
        $('.modal').on('shown.bs.modal', function() {
            $("[name=mavach]").focus();
        });
        $("[name=mavach]").keypress(function(e) {
            //e.preventDefault();
            // Enter pressed?
            if(e.which == 10 || e.which == 13) {
                e.preventDefault();
                $(".save").trigger("click");
            }
        });
        $(".save").click(function(e){
            e.preventDefault();
            $.ajax({
                url:"/admin/product/edit",
                data:$("#form").serialize(),
                type:"POST",
                success:function(data){
                    if(data == 1){
                        $('.modal').modal('hide')
                        table.ajax.reload( null, false );
                    }else{
                        alert(data);
                    }
                }
            })
        })
    });
</script>
}